name: <%= name %>
on:
  repository_dispatch:
    types:
      - script
  workflow_dispatch:
  schedule:
    - cron: "0 17 * * *"
  push:
    paths:
      - "contrib/dres_client/**"
      - "contrib/dres_rails/**"
      - ".github/workflows/<%= name %>.yml"
      - "support/**"
      - "!support/bundler/**"
      - "!support/ci/**"
  pull_request:
    types: [opened, reopened]
    paths:
      - "<%= working_directory %>/**"
      - "contrib/dres_rails/**"
      - ".github/workflows/<%= name %>.yml"
      - "support/**"
      - "!support/bundler/**"
      - "!support/ci/**"
jobs:
  test:
    runs-on: ubuntu-20.04
    env:
      <%= env %>
    strategy:
      fail-fast: false
      matrix:
        include:
          <%= matrix %>
    steps:
      <%= steps %>