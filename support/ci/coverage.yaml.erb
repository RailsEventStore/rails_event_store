name: <%= name %>
on:
  repository_dispatch:
    types:
      - script
  schedule:
    - cron: "0 17 * * *"
  workflow_dispatch:
  push:
    paths:
      - "<%= working_directory %>/Gemfile.lock"
      - ".github/workflows/<%= name %>.yml"
      - "support/**"
      - "!support/bundler/**"
      - "!support/ci/**"
  pull_request:
    types: [opened, reopened]
    paths:
      - "<%= working_directory %>/Gemfile.lock"
      - ".github/workflows/<%= name %>.yml"
      - "support/**"
      - "!support/bundler/**"
      - "!support/ci/**"
jobs:
  <%= job_name %>:
    runs-on: ubuntu-20.04
    timeout-minutes: 120
    env:
      <%= env %>
    strategy:
      fail-fast: false
      matrix:
        include:
          <%= matrix %>
    steps:
      <%= steps %>