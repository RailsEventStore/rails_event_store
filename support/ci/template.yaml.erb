name: <%= name %>
on:
  repository_dispatch:
    types:
      - script
  workflow_dispatch:
  push:
    paths:
      <%= paths %>
  pull_request:
    types: [opened, reopened]
    paths:
      <%= paths %>
jobs:
  <%= job_name %>:
    runs-on: ubuntu-20.04
    env:
      <%= env %>
<% unless services.empty? %>
    services:
      <%= services %>
<% end %>
    strategy:
      fail-fast: false
      matrix:
        include:
          <%= matrix %>
    steps:
      <%= steps %>