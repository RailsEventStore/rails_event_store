name: <%= name %>
on:
  repository_dispatch:
    types:
      - script
  workflow_dispatch:
  push:
    paths:
      - "aggregate_root/**"
      - "rails_event_store/**"
      - "ruby_event_store/**"
      - "ruby_event_store-active_record/**"
      - "ruby_event_store-browser/**"
      - "ruby_event_store-rspec/**"
      - ".github/workflows/<%= name %>.yml"
      - "support/**"
      - "!support/bundler/**"
      - "!support/ci/**"
  pull_request:
    types: [opened, reopened]
    paths:
      - "aggregate_root/**"
      - "rails_event_store/**"
      - "ruby_event_store/**"
      - "ruby_event_store-active_record/**"
      - "ruby_event_store-browser/**"
      - "ruby_event_store-rspec/**"
      - ".github/workflows/<%= name %>.yml"
      - "support/**"
      - "!support/bundler/**"
      - "!support/ci/**"
jobs:
  <%= job_name %>:
    runs-on: ubuntu-20.04
    env:
      <%= env %>
    services:
      <%= services %>
    strategy:
      fail-fast: false
      matrix:
        include:
          <%= matrix %>
    steps:
      <%= steps %>